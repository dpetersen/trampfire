.github-bot-commit
  %p.commit-message
    %a{ href: repository.owner_path, target: "_blank" }= repository.owner_login
    \/
    %a{ href: repository.url, target: "_blank" }= repository.name
    %br/
    = commit.message

  .commit-meta
    %span.sha-block
      commit
      %span.sha
        %a{ href: commit.url, target: "_blank" }= commit.sha
    .authorship
      %img{ src: commit.author_gravatar_url, width: 24, height: 24}/
      %span.author-name
        - if commit.authored_by_github_user?
          %a{ href: commit.author_profile_path, target: "_blank" }= commit.author_name
        - else
          = commit.author_name
      authored
